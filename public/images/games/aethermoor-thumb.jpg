<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="aetherGrad" cx="50%" cy="30%" r="70%">
      <stop offset="0%" style="stop-color:#A855F7;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1E293B;stop-opacity:1" />
    </radialGradient>
    <linearGradient id="magicGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#06B6D4;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#A855F7;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F59E0B;stop-opacity:1" />
    </linearGradient>
    <filter id="magicGlow">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <rect width="100%" height="100%" fill="url(#aetherGrad)"/>
  
  <!-- Floating islands -->
  <ellipse cx="120" cy="180" rx="60" ry="20" fill="#475569"/>
  <ellipse cx="120" cy="175" rx="55" ry="18" fill="#64748B"/>
  <ellipse cx="280" cy="140" rx="40" ry="15" fill="#475569"/>
  <ellipse cx="280" cy="137" rx="35" ry="13" fill="#64748B"/>
  
  <!-- Magical crystals on islands -->
  <polygon points="110,165 120,150 130,165 120,175" fill="url(#magicGrad)" filter="url(#magicGlow)"/>
  <polygon points="270,127 280,115 290,127 280,135" fill="url(#magicGrad)" filter="url(#magicGlow)"/>
  
  <!-- Floating academy tower -->
  <rect x="190" y="100" width="20" height="60" fill="#6B7280"/>
  <polygon points="185,100 200,80 215,100" fill="#A855F7"/>
  <circle cx="200" cy="90" r="3" fill="#06B6D4" filter="url(#magicGlow)"/>
  
  <!-- Magic energy streams -->
  <path d="M120 150 Q150 120 190 110" stroke="url(#magicGrad)" stroke-width="2" fill="none" opacity="0.8" filter="url(#magicGlow)"/>
  <path d="M280 115 Q250 100 210 105" stroke="url(#magicGrad)" stroke-width="2" fill="none" opacity="0.8" filter="url(#magicGlow)"/>
  
  <!-- Magical particles -->
  <circle cx="150" cy="130" r="2" fill="#06B6D4" opacity="0.8" filter="url(#magicGlow)"/>
  <circle cx="240" cy="120" r="1.5" fill="#A855F7" opacity="0.9" filter="url(#magicGlow)"/>
  <circle cx="170" cy="110" r="1" fill="#F59E0B" opacity="0.7" filter="url(#magicGlow)"/>
  <circle cx="220" cy="125" r="1.5" fill="#06B6D4" opacity="0.8" filter="url(#magicGlow)"/>
  
  <!-- Mage figure -->
  <circle cx="200" cy="170" r="8" fill="#4C1D95"/>
  <rect x="195" y="175" width="10" height="15" fill="#4C1D95"/>
  <circle cx="205" cy="165" r="2" fill="#A855F7" filter="url(#magicGlow)"/>
  
  <!-- Ethereal clouds -->
  <ellipse cx="80" cy="80" rx="30" ry="15" fill="#A855F7" opacity="0.3"/>
  <ellipse cx="320" cy="60" rx="25" ry="12" fill="#06B6D4" opacity="0.3"/>
  
  <!-- Title overlay -->
  <rect x="0" y="220" width="400" height="80" fill="rgba(0,0,0,0.7)"/>
  <text x="200" y="250" font-family="Arial, sans-serif" font-size="22" font-weight="bold" fill="#FFF" text-anchor="middle">Legends of Aethermoor</text>
  <text x="200" y="275" font-family="Arial, sans-serif" font-size="14" fill="#C084FC" text-anchor="middle">Magical Academy RPG</text>
</svg>